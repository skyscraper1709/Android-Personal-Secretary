
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="ifContentScrolls"
 android:scrollbarStyle="insideOverlay"
 android:scrollbars="vertical" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainPage" >

    <TextView
        android:id="@+id/addMedicinePageDetailsBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addMedicinePageTitleInputBox"
        android:layout_below="@+id/addMedicinePageTitleInputBox"
        android:layout_marginTop="16dp"
        android:text="Details"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/addMedicinePageDetailsInputBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addMedicinePageDetailsBox"
        android:layout_below="@+id/addMedicinePageDetailsBox"
        android:layout_marginTop="15dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/addMedicinePageDateBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addMedicinePageDetailsInputBox"
        android:layout_below="@+id/addMedicinePageDetailsInputBox"
        android:layout_marginTop="15dp"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/addMedicinePageTimeBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/addMedicinePageDateBox"
        android:layout_below="@+id/addMedicinePageDateInputBox"
        android:layout_marginTop="26dp"
        android:text="Time"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/addMedicinePageDateInputBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addMedicinePageTimeBox"
        android:layout_below="@+id/addMedicinePageDateBox"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/addMedicinePageTitleBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addMedicinePageDateInputBox"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/addMedicinePageTitleInputBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/addMedicinePageTitleBox"
        android:layout_marginLeft="40dp"
        android:ems="10" />

    <EditText
        android:id="@+id/addMedicinePageTimeInputBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addMedicinePageDateBox"
        android:layout_below="@+id/addMedicinePageTimeBox"
        android:ems="10"
        android:inputType="time" />

    <Button
        android:id="@+id/addMedicinePageSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/addMedicinePageTimeBox"
        android:layout_below="@+id/addMedicinePageTimeInputBox"
        android:layout_marginTop="26dp"
        android:text="Submit" />

    <Button
        android:id="@+id/addMedicinePageResetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addMedicinePageSubmitButton"
        android:layout_alignBottom="@+id/addMedicinePageSubmitButton"
        android:layout_toRightOf="@+id/addMedicinePageMoreOptionsButton"
        android:text="Reset" />

    <Button
        android:id="@+id/addMedicinePageMoreOptionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addMedicinePageResetButton"
        android:layout_alignBottom="@+id/addMedicinePageResetButton"
        android:layout_toRightOf="@+id/addMedicinePageSubmitButton"
        android:text="More Options" />

</RelativeLayout>
 